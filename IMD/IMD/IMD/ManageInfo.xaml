<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMD.ManageInfo">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor=" #496192" Padding="24" CornerRadius="0">
                <Label Text="QUẢN LÝ THÔNG TIN SINH VIÊN" HorizontalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontSize="22"/>
            </Frame>
            
            <Grid Padding="10" RowDefinitions="40,40,40,40,40">
                <Label VerticalOptions="Start" Text="{Binding HoTen}" Grid.Column="0" Grid.Row="0"/>

                <Label VerticalOptions="Start" Text="{Binding MaSV}" Grid.Column="0" Grid.Row="1"/>

                <Label VerticalOptions="Start" Text="{Binding BienSo}" Grid.Column="0" Grid.Row="2"/>

                <Label VerticalOptions="Start" Text="{Binding DongXe}" Grid.Column="0" Grid.Row="3"/>

                <Label VerticalOptions="Start" Text="{Binding MauXe}" Grid.Column="0" Grid.Row="4"/>

                <Label VerticalOptions="Start" Text="{Binding MauXe}" Grid.Column="0" Grid.Row="4"/>
                
                <Label VerticalOptions="Start" Text="{Binding MauXe}" Grid.Column="0" Grid.Row="4"/>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>