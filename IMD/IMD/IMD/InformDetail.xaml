<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Thêm thông báo mới"
             x:Class="IMD.InformDetail">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry Placeholder="Tiêu đề"
                  x:Name="titleEntry"
                   TextTransform="Uppercase"/>
            <Entry Placeholder="Nội dung thông báo"
                   x:Name="enterEntry"/>
            <Button Text="Gửi thông báo"
                    Clicked="Button_Send"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
