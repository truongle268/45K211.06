<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMD.Tickets">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
            <Image Source="InfoTicket.png" WidthRequest="700" HeightRequest="510"></Image>
            <Picker Title="--Chọn gói--"
                    x:Name="TicketPicker"
                    TitleColor="Black"
                    SelectedIndexChanged ="TicketPicker_SelectedIndexChanged">
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>