<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMD.Tickets">
    <ContentPage.Content>
        <StackLayout Padding="0,0,0,0" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Image Source="InfoTicket.png" WidthRequest="500" HeightRequest="500"></Image>
            <Picker Title="--Chọn gói--" 
                    x:Name ="TicketPicker"
                    TitleColor="Black"
                    
                SelectedIndexChanged="TicketPicker_OnSelectedIndexChanged" >
            </Picker>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
